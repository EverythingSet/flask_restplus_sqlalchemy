{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "API - Doc",
            "type": "shell",
            "command": "sphinx-apidoc",
            "args": [
                "-o",
                "${workspaceFolder}/docs/source/",
                "${workspaceFolder}/flask_restplus_sqlalchemy/"
            ],
            "problemMatcher": []
        },
        {
            "label": "API - Make",
            "type": "shell",
            "command": "sphinx-build",
            "args": [
                "-M",
                "html",
                "${workspaceFolder}/docs/source",
                "${workspaceFolder}/docs/build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Doumentation Service",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "8000",
                "--bind",
                "127.0.0.1",
                "--directory",
                "${workspaceFolder}/docs/build/html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Lint ALL",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pylint",
                "--rcfile=${workspaceFolder}/.pylintrc",
                "flask_restplus_sqlalchemy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Bandit",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "bandit",
                "-r",
                "flask_restplus_sqlalchemy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage html",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pytest",
                "--cov-report",
                "html",
                "--cov=flask_restplus_sqlalchemy/"
            ],
            "problemMatcher": []
        },
        {
            "label": "Coverage Service",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "8001",
                "--bind",
                "127.0.0.1",
                "--directory",
                "${workspaceFolder}/htmlcov"
            ],
            "problemMatcher": []
        }
    ]
}