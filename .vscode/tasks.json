{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "API - Doc",
            "type": "shell",
            "command": "sphinx-apidoc",
            "args": [
                "-o",
                "${workspaceFolder}/docs/source/",
                "${workspaceFolder}/flask_restplus_sqlalchemy/"
            ],
            "problemMatcher": []
        },
        {
            "label": "API - Make",
            "type": "shell",
            "command": "sphinx-build",
            "args": [
                "-M",
                "html",
                "${workspaceFolder}/docs/source",
                "${workspaceFolder}/docs/build"
            ],
            "problemMatcher": []
        },
        {   
            "label": "Doumentation Service",
            "type": "shell",
            "command":"python3",
            "args": [
                "-m",
                "http.server",
                "8000",
                "--bind",
                "127.0.0.1",
                "--directory",
                "${workspaceFolder}/docs/build/html"
            ],
        }
    ]
}